<div class='row'>
  <div class='col-xs-12 columns'>
    <h1>Create a new event</h1>
    <%= form_for Event.new do |p| %>
      <label>
        Title
        <%= p.text_field :title, placeholder: 'Event title' %>
      </label>
      <label>
        Body
        <%= p.text_area :body, placeholder: 'Lorem ipsum...' %>
      </label>
      <%= p.submit 'Save event', class: 'button' %>
    <% end %>
  </div><!--12-->
</div><!--row-->