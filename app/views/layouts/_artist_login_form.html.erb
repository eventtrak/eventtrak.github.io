<div id="fb-root"></div>


<div class='ArtistLogin' id='artistLogin'>

  <div id="formError" class="alert alert-danger Hidden">
    <% # rendered using react (via signup.js) %>
  </div>


  <div id="formSuccess" class="alert alert-success Hidden">
    <% # rendered using react (via signup.js) %>
  </div>


  
  <%= form_for(@artist, url: artists_path(@artist), html: { id: 'artistLoginForm' }) do |f| %>
  <%= f.email_field :email, placeholder: "Artist email" %>
  <br />
  <%= f.password_field :password, placeholder: "Password" %>
  <br />

  <% end %>

  <%= button_tag "Login", class: "btn btn-large btn-primary", id: "loginButton" %>

</div>

